<h1>Albums for: {{albums.0.artists.0.name}}</h1>
<div class="row ">
{{#each albums as |album|}}

  <div class="col-4">
    <div class="card my-5"> 
        <img src="{{album.images.0.url}}" class="card-img-top" alt="...">
        <div class="card-body">
         <h5 class="card-title">{{album.name}}</h5>
         <a href="/tracklist/{{album.id}}" class="btn btn-primary">View tracks</a>
        </div>
   </div>
</div>

{{/each}}
</div>